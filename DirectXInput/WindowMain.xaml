            <!-- Grid Settings -->
            <Grid Name="grid_Settings" Grid.Column="1" Background="{DynamicResource ApplicationWhiteBrush}" Visibility="Collapsed">
                <Grid Margin="10,5,10,5" HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <StackPanel>
                            <TextBlock Style="{StaticResource TextBlockBlackLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Settings"/>
                            <Border Margin="0,30,0,0" HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1">
                        <ScrollViewer Style="{StaticResource ScrollViewerVertical}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource TextBlockAccentLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Launch Settings"/>
                                <CheckBox Name="cb_SettingsWindowsStartup" Content="Launch application on Windows startup" Style="{StaticResource CheckBoxBlack}"/>
                                <TextBlock Text="Enabling this will launch DirectXInput when you start Windows automatically." TextWrapping="Wrap" Style="{StaticResource TextBlockGray}"/>

                                <TextBlock Margin="0,10,0,0" Style="{StaticResource TextBlockAccentLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Other Settings"/>
                                <Button Name="btn_Settings_InstallDrivers" Content="Install or update the required drivers" HorizontalAlignment="Left" Style="{StaticResource ButtonAccentBlack}"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Grid Debug -->
            <Grid Name="grid_Debug" Grid.Column="1" Background="{DynamicResource ApplicationWhiteBrush}" Visibility="Collapsed">
                <Grid Margin="10,5,10,5" HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <StackPanel>
                            <TextBlock Style="{StaticResource TextBlockBlackLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Debug"/>
                            <Border Margin="0,30,0,0" HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Grid.Row="1">
                        <Button Name="btn_CopyDebugInformation" HorizontalAlignment="Left" Margin="0,10,0,0" Style="{StaticResource ButtonAccentBlack}" Content="Copy controller debug information"/>
                        <TextBlock Name="textblock_LiveDebugInformation" HorizontalAlignment="Left" Margin="0,10,0,0" Style="{StaticResource TextBlockBlack}" Text="Connect a controller to show debug information." TextWrapping="Wrap"/>
                    </StackPanel>

                    <ListBox Grid.Row="2" Name="listbox_LiveDebugInput" Margin="0,10,0,10" HorizontalAlignment="Left" VerticalAlignment="Top" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemNoneBlack}" ItemTemplate="{StaticResource ListboxItemDebugBox}" Style="{StaticResource ListBoxWrapPanelVertical}" Visibility="Collapsed"/>
                </Grid>
            </Grid>

            <!-- Grid Help -->
            <Grid Name="grid_Help" Grid.Column="1" Background="{DynamicResource ApplicationWhiteBrush}" Visibility="Collapsed">
                <Grid Margin="10,5,10,5" HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <StackPanel>
                            <TextBlock Style="{StaticResource TextBlockBlackLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Help"/>
                            <Border Margin="0,30,0,0" HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1" Margin="0,0,0,5">
                        <ScrollViewer Name="scroll_Help" Style="{StaticResource ScrollViewerVertical}">
                            <StackPanel Name="sp_Help" Margin="0,0,10,0"/>
                        </ScrollViewer>
                    </Grid>

                    <Grid Grid.Row="2" Margin="0,5,0,5">
                        <StackPanel Orientation="Horizontal">
                            <Button Name="btn_Help_ProjectWebsite" Content="Visit Project Website" HorizontalAlignment="Left" Style="{StaticResource ButtonAccentBlack}"/>
                            <Button Name="btn_Help_OpenDonation" Margin="10,0,0,0" Content="Open Donation Page" HorizontalAlignment="Left" Style="{StaticResource ButtonAccentBlack}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Controller Information -->
            <Grid Grid.Column="1" VerticalAlignment="Top" Height="70">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Name="txt_ActiveControllerName" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,0" Style="{StaticResource TextBlockAccentLight}" FontSize="{DynamicResource TextSizeLarge}" Text="No controller"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,2">
                    <TextBlock Name="txt_ActiveControllerType" Style="{StaticResource TextBlockGray}" HorizontalAlignment="Right" Text="Type"/>
                    <TextBlock Name="txt_ActiveControllerLatency" Style="{StaticResource TextBlockGray}" HorizontalAlignment="Right" Text="Latency"/>
                    <TextBlock Name="txt_ActiveControllerBattery" Style="{StaticResource TextBlockGray}" HorizontalAlignment="Right" Text="Battery"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Status - Window Active -->
        <Grid Name="grid_WindowActive" Visibility="Collapsed">
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource ApplicationBlackColor}" Opacity="0.90"/>
