                                    <Button Name="btn_SetPadTriggerRight" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="140,45,0,0" Height="40" Width="40" Tag="Right Trigger"/>

                                    <Button Name="btn_SetPadThumbRightLeft" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="220,0,0,0" Height="26" Width="26" Tag="Right Thumb Left"/>
