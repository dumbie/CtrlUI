                                    <Button Name="btn_SetPadThumbRightDown" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="280,58,0,0" Height="26" Width="26" Tag="Right Thumb Down"/>
                                    <Button Name="btn_SetPadThumbRight" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="280,0,0,0" Height="26" Width="26" Tag="Right Thumb Button"/>

                                    <Button Name="btn_SetPadA" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Height="26" Width="26" Margin="465,60,0,0" Tag="Button A"/>
