<Window x:Class="DirectXInput.WindowMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirectXInput"
        xmlns:AVHotkeyPicker="clr-namespace:ArnoldVinkHotkeyPicker;assembly=ArnoldVinkCode"
        xmlns:styles="clr-namespace:ArnoldVinkCode.Styles;assembly=ArnoldVinkCode"
        RenderOptions.BitmapScalingMode="HighQuality"
        SnapsToDevicePixels="True"
        mc:Ignorable="d"
        Title="DirectXInput"
        ShowInTaskbar="False"
        Background="{DynamicResource ApplicationBlackBrush}"
        MinHeight="700"
        Height="700"
        MinWidth="720"
        MaxWidth="720"
        Width="720">

    <!-- Grid Application -->
    <Grid Name="grid_App">
        <!-- Grid Main -->
        <Grid Name="grid_Main">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Grid Menu -->
            <Grid Name="grid_Menu" Grid.Column="0" Width="105" Background="{DynamicResource ApplicationBlackBrush}">
                <ListBox Name="lb_Menu" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemWhite}" Style="{StaticResource ListBoxVertical}">
                    <StackPanel Name="menuButtonConnection" Style="{StaticResource ListBoxMenuStackPanel}" ToolTipService.ToolTip="Manage controller connection">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Usb.png" Width="55" HorizontalAlignment="Center"/>
                        <TextBlock Text="Connection" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonController" Style="{StaticResource ListBoxMenuStackPanel}" ToolTipService.ToolTip="Manage controller settings">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Controller.png" Width="55" HorizontalAlignment="Center"/>
                        <TextBlock Text="Controller" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonBattery" Style="{StaticResource ListBoxMenuStackPanel}" ToolTipService.ToolTip="Manage battery settings">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Battery/BatteryVerDis100.png" Margin="0,5,0,0" Height="50" HorizontalAlignment="Center"/>
                        <TextBlock Text="Battery" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonIgnore" Style="{StaticResource ListBoxMenuStackPanel}" ToolTipService.ToolTip="Manage ignored controllers">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Hide.png" Width="55" HorizontalAlignment="Center"/>
                        <TextBlock Text="Ignore" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonShortcuts" Style="{StaticResource ListBoxMenuStackPanel}" ToolTipService.ToolTip="Manage controller shortcuts">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Shortcut.png" Width="55" HorizontalAlignment="Center"/>
                        <TextBlock Text="Shortcuts" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonCapture" Style="{StaticResource ListBoxMenuStackPanel}" ToolTipService.ToolTip="Manage capture settings">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Screenshot.png" Width="55" HorizontalAlignment="Center"/>
                        <TextBlock Text="Capture" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonKeyboard" Style="{StaticResource ListBoxMenuStackPanel}" ToolTipService.ToolTip="Open keyboard settings">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Keyboard.png" Width="55" HorizontalAlignment="Center"/>
                        <TextBlock Text="Keyboard" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonKeypad" Style="{StaticResource ListBoxMenuStackPanel}" ToolTipService.ToolTip="Open keypad settings">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Keypad.png" Width="55" HorizontalAlignment="Center"/>
                        <TextBlock Text="Keypad" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonSettings" Style="{StaticResource ListBoxMenuStackPanel}" ToolTipService.ToolTip="Open application settings">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Settings.png" Width="55" HorizontalAlignment="Center"/>
                        <TextBlock Text="Settings" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonDebug" Style="{StaticResource ListBoxMenuStackPanel}" ToolTipService.ToolTip="Open controller debug">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Debug.png" Width="55" HorizontalAlignment="Center"/>
                        <TextBlock Text="Debug" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonHelp" Style="{StaticResource ListBoxMenuStackPanel}" ToolTipService.ToolTip="Open application help">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Help.png" Width="55" HorizontalAlignment="Center"/>
                        <TextBlock Text="Help" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonClose" Style="{StaticResource ListBoxMenuStackPanel}" ToolTipService.ToolTip="Close the window">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Close.png" Width="55" HorizontalAlignment="Center"/>
                        <TextBlock Text="Close" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Name="menuButtonExit" Style="{StaticResource ListBoxMenuStackPanel}" ToolTipService.ToolTip="Exit application">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Shutdown.png" Width="55" HorizontalAlignment="Center"/>
                        <TextBlock Text="Exit" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </ListBox>
            </Grid>

            <!-- Grid Connection -->
            <Grid Name="grid_Connection" Grid.Column="1" Background="{DynamicResource ApplicationWhiteBrush}" Visibility="Visible">
                <Grid Margin="10,5,10,5" HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <StackPanel>
                            <TextBlock Style="{StaticResource TextBlockBlackLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Connection"/>
                            <Border Margin="0,30,0,0" HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1">
                        <ScrollViewer Style="{StaticResource ScrollViewerVertical}">
                            <StackPanel>
                                <StackPanel Orientation="Vertical" Margin="0,5,0,0">
                                    <Button Name="button_Controller0" Style="{StaticResource ButtonImageTransparentBlackBorder}" HorizontalAlignment="Left" ToolTipService.ToolTip="Click to activate the first controller">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Name="image_Controller0" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Controller-Dark.png" Width="35" Margin="0,0,10,0"/>
                                            <TextBlock Name="textblock_Controller0" Text="No controller connected" Style="{StaticResource TextBlockBlackLight}" FontSize="{DynamicResource TextSizeHuge}"/>
                                            <TextBlock Name="textblock_Controller0CodeName" Style="{StaticResource TextBlockGrayLight}" FontSize="{DynamicResource TextSizeHuge}" Margin="10,0,0,0"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Name="button_Controller1" Style="{StaticResource ButtonImageTransparentBlackBorder}" HorizontalAlignment="Left" ToolTipService.ToolTip="Click to activate the second controller">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Name="image_Controller1" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Controller-Dark.png" Width="35" Margin="0,0,10,0"/>
                                            <TextBlock Name="textblock_Controller1" Text="No controller connected" Style="{StaticResource TextBlockBlackLight}" FontSize="{DynamicResource TextSizeHuge}"/>
                                            <TextBlock Name="textblock_Controller1CodeName" Style="{StaticResource TextBlockGrayLight}" FontSize="{DynamicResource TextSizeHuge}" Margin="10,0,0,0"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Name="button_Controller2" Style="{StaticResource ButtonImageTransparentBlackBorder}" HorizontalAlignment="Left" ToolTipService.ToolTip="Click to activate the third controller">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Name="image_Controller2" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Controller-Dark.png" Width="35" Margin="0,0,10,0"/>
                                            <TextBlock Name="textblock_Controller2" Text="No controller connected" Style="{StaticResource TextBlockBlackLight}" FontSize="{DynamicResource TextSizeHuge}"/>
                                            <TextBlock Name="textblock_Controller2CodeName" Style="{StaticResource TextBlockGrayLight}" FontSize="{DynamicResource TextSizeHuge}" Margin="10,0,0,0"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Name="button_Controller3" Style="{StaticResource ButtonImageTransparentBlackBorder}" HorizontalAlignment="Left" ToolTipService.ToolTip="Click to activate the fourth controller">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Name="image_Controller3" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Controller-Dark.png" Width="35" Margin="0,0,10,0"/>
                                            <TextBlock Name="textblock_Controller3" Text="No controller connected" Style="{StaticResource TextBlockBlackLight}" FontSize="{DynamicResource TextSizeHuge}"/>
                                            <TextBlock Name="textblock_Controller3CodeName" Style="{StaticResource TextBlockGrayLight}" FontSize="{DynamicResource TextSizeHuge}" Margin="10,0,0,0"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>

                                <TextBlock Margin="0,10,0,0" Name="txt_Controller_Information" Text="Please connect a supported controller to your device to get started." Style="{StaticResource TextBlockBlack}"/>
                                <TextBlock Text="To activate a controller press on the 'Guide' button on the controller." Style="{StaticResource TextBlockGray}"/>

                                <Button Margin="0,10,0,0" Name="btn_CheckControllers" Style="{StaticResource ButtonAccentBlack}" HorizontalAlignment="Left" Content="Manage Windows game controllers"/>
                                <Button Margin="0,10,0,0" Name="btn_CheckDeviceManager" Style="{StaticResource ButtonAccentBlack}" HorizontalAlignment="Left" Content="Open the Windows device manager"/>
                                <Button Margin="0,20,0,0" Name="btn_RemoveController" Style="{StaticResource ButtonAccentBlack}" HorizontalAlignment="Left" Content="Remove and reset active controller profile"/>
                                <Button Margin="0,10,0,0" Name="btn_IgnoreController" Style="{StaticResource ButtonAccentBlack}" HorizontalAlignment="Left" Content="Ignore and disconnect active controller"/>
                                <!--<Button Margin="0,20,0,0" Name="btn_BluetoothPair" Style="{StaticResource ButtonAccentBlack}" HorizontalAlignment="Left" Content="Pair active controller with Bluetooth"/>-->
                                <Button Margin="0,20,0,0" Name="btn_DisconnectController" Style="{StaticResource ButtonAccentBlack}" HorizontalAlignment="Left" Content="Re/disconnect active controller"/>
                                <Button Margin="0,10,0,0" Name="btn_DisconnectControllerAll" Style="{StaticResource ButtonAccentBlack}" HorizontalAlignment="Left" Content="Re/disconnect all controllers"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Grid Controller -->
            <Grid Name="grid_Controller" Grid.Column="1" Background="{DynamicResource ApplicationWhiteBrush}" Visibility="Collapsed">
                <Grid Margin="10,5,10,5" HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <StackPanel>
                            <TextBlock Style="{StaticResource TextBlockBlackLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Controller"/>
                            <ProgressBar Height="2" Margin="0,30,0,0" Name="pb_ControllerMapProgress" Style="{StaticResource ProgressBarAccent}" HorizontalAlignment="Stretch" Value="100"/>
                        </StackPanel>
                    </Grid>

                    <ScrollViewer Grid.Row="1" Style="{StaticResource ScrollViewerVertical}">
                        <StackPanel>
                            <TextBlock Name="txt_ControllerMap_Status" Text="Click on a button below that you want to change on the controller." Style="{StaticResource TextBlockGray}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <Button Name="button_SetController_Map" Content="Map" HorizontalAlignment="Left" Style="{StaticResource ButtonAccentBlack}"/>
                                <Button Name="button_SetController_Unmap" Margin="10,0,0,0" Content="Unmap" HorizontalAlignment="Left" Style="{StaticResource ButtonAccentBlack}"/>
                                <Button Name="button_SetController_Cancel" Margin="10,0,0,0" Content="Cancel" IsEnabled="False" HorizontalAlignment="Left" Style="{StaticResource ButtonAccentBlack}"/>
                                <TextBlock Name="textblock_SetController_Name" Text="Select a button" Margin="10,0,0,0" Style="{StaticResource TextBlockBlackLight}" FontSize="{StaticResource TextSizeLarge}"/>
                            </StackPanel>

                            <Grid Name="grid_ControllerPreview" HorizontalAlignment="Center" Width="500" Height="255" Margin="0,10,0,0">
                                <Grid.Background>
                                    <ImageBrush ImageSource="pack://siteoforigin:,,,/Assets/Default/Controller/ControllerPreview.png"/>
                                </Grid.Background>

                                <!-- Preview -->
                                <Image Name="img_ControllerPreview_ButtonA" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ButtonPress.png" Width="25" Height="25" Margin="370,109,105,121"/>
                                <Image Name="img_ControllerPreview_ButtonB" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ButtonPress.png" Width="25" Height="25" Margin="394,85,81,145"/>
                                <Image Name="img_ControllerPreview_ButtonX" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ButtonPress.png" Width="25" Height="25" Margin="346,85,130,145"/>
                                <Image Name="img_ControllerPreview_ButtonY" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ButtonPress.png" Width="25" Height="25" Margin="370,60,105,168"/>

                                <Image Name="img_ControllerPreview_ButtonBack" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ButtonPress.png" Width="25" Height="25" Margin="197,57,278,173"/>
                                <Image Name="img_ControllerPreview_ButtonStart" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ButtonPress.png" Width="25" Height="25" Margin="278,57,196,173"/>
                                <Image Name="img_ControllerPreview_ButtonGuide" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ButtonPress.png" Width="30" Height="30" Margin="236,56,235,169"/>

                                <Image Name="img_ControllerPreview_ButtonTouchpad" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ButtonPress.png" Width="30" Height="30" Margin="236,0,235,195"/>
                                <Image Name="img_ControllerPreview_ButtonMedia" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ButtonPress.png" Width="30" Height="30" Margin="236,0,235,35"/>

                                <Image Name="img_ControllerPreview_ButtonThumbLeft" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ButtonPress.png" Width="42" Height="42" Margin="178,117,280,96"/>
                                <Image Name="img_ControllerPreview_ButtonThumbRight" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ButtonPress.png" Width="42" Height="42" Margin="282,117,176,96"/>

                                <StackPanel Margin="282,117,176,96" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Image Name="img_ControllerPreview_RightAxe" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ControllerAxe.png" Width="25" Height="25"/>
                                </StackPanel>
                                <StackPanel Margin="178,117,280,96" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Image Name="img_ControllerPreview_LeftAxe" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ControllerAxe.png" Width="25" Height="25"/>
                                </StackPanel>

                                <Image Name="img_ControllerPreview_DPadLeft" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ButtonPress.png" Width="25" Height="25" Margin="65,85,410,145"/>
                                <Image Name="img_ControllerPreview_DPadUp" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ButtonPress.png" Width="25" Height="25" Margin="106,45,369,185"/>
                                <Image Name="img_ControllerPreview_DPadRight" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ButtonPress.png" Width="25" Height="25" Margin="147,85,328,145"/>
                                <Image Name="img_ControllerPreview_DPadDown" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ButtonPress.png" Width="25" Height="25" Margin="106,123,369,107"/>

                                <Image Name="img_ControllerPreview_ButtonShoulderLeft" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ButtonPress.png" Width="25" Height="25" Margin="16,7,459,223"/>
                                <Image Name="img_ControllerPreview_TriggerLeft" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ButtonPress.png" Width="25" Height="25" Margin="-450,-122,0,0"/>
                                <Image Name="img_ControllerPreview_ButtonShoulderRight" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ButtonPress.png" Width="25" Height="25" Margin="460,7,15,223"/>
                                <Image Name="img_ControllerPreview_TriggerRight" Source="pack://siteoforigin:,,,/Assets/Default/Controller/ButtonPress.png" Width="25" Height="25" Margin="455,-122,0,0"/>

                                <!-- Mapping -->
                                <Button Name="btn_SetA" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Height="24" Width="24" Margin="371,109,105,122" ToolTipService.ToolTip="Button A"/>
                                <Button Name="btn_SetB" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Height="24" Width="24" Margin="395,85,81,146" ToolTipService.ToolTip="Button B"/>
                                <Button Name="btn_SetX" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Height="24" Width="24" Margin="347,85,129,146" ToolTipService.ToolTip="Button X"/>
                                <Button Name="btn_SetY" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Height="24" Width="24" Margin="371,61,105,170" ToolTipService.ToolTip="Button Y"/>

                                <Button Name="btn_SetShoulderLeft" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="0,0,445,220" Height="35" Width="55" ToolTipService.ToolTip="Left Shoulder"/>
                                <Button Name="btn_SetShoulderRight" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="445,0,0,220" Height="35" Width="55" ToolTipService.ToolTip="Right Shoulder"/>

                                <Button Name="btn_SetThumbLeft" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="179,118,281,97" Height="40" Width="40" ToolTipService.ToolTip="Left Thumb Button"/>
                                <Button Name="btn_SetThumbRight" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="282,118,178,97" Height="40" Width="40" ToolTipService.ToolTip="Right Thumb Button"/>

                                <Button Name="btn_SetTriggerLeft" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="3,39,457,176" Height="40" Width="40" ToolTipService.ToolTip="Left Trigger"/>
                                <Button Name="btn_SetTriggerRight" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="457,39,3,176" Height="40" Width="40" ToolTipService.ToolTip="Right Trigger"/>

                                <Button Name="btn_SetBack" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="195,60,275,175" Width="30" Height="20" ToolTipService.ToolTip="Button Back"/>
                                <Button Name="btn_SetGuide" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="235,55,235,170" Height="30" Width="30" ToolTipService.ToolTip="Button Guide"/>
                                <Button Name="btn_SetStart" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="275,60,195,175" Width="30" Height="20" ToolTipService.ToolTip="Button Start"/>

                                <Button Name="btn_SetTouchpad" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="0,0,0,200" Width="120" Height="20" ToolTipService.ToolTip="Button Touchpad"/>
                                <Button Name="btn_SetMedia" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="230,0,230,30" Height="20" Width="40" ToolTipService.ToolTip="Button Media"/>

                                <!-- Trigger Details -->
                                <TextBlock Name="textblock_Trigger_Left" Text="0" Width="50" TextAlignment="Center" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-455,-163,0,0"/>
                                <TextBlock Name="textblock_Trigger_Right" Text="0" Width="50" TextAlignment="Center" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="455,-163,0,0"/>

                                <!-- Thumb Details -->
                                <TextBlock Name="textblock_Thumb_Left_Y_Up" Text="0" Width="50" TextAlignment="Center" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-100,-38,0,0"/>
                                <TextBlock Name="textblock_Thumb_Left_Y_Down" Text="0" Width="50" TextAlignment="Center" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-100,75,0,0"/>
                                <TextBlock Name="textblock_Thumb_Left_X_Left" Text="0" Width="50" TextAlignment="Right" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-200,20,0,0"/>
                                <TextBlock Name="textblock_Thumb_Left_X_Right" Text="0" Width="50" TextAlignment="Left" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-8,20,0,0"/>

                                <TextBlock Name="textblock_Thumb_Right_Y_Up" Text="0" Width="50" TextAlignment="Center" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-38,-110,0"/>
                                <TextBlock Name="textblock_Thumb_Right_Y_Down" Text="0" Width="50" TextAlignment="Center" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,75,-110,0"/>
                                <TextBlock Name="textblock_Thumb_Right_X_Left" Text="0" Width="50" TextAlignment="Right" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,20,0,0"/>
                                <TextBlock Name="textblock_Thumb_Right_X_Right" Text="0" Width="50" TextAlignment="Left" Style="{StaticResource TextBlockWhite}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="200,20,0,0"/>
                            </Grid>

                            <TextBlock Style="{StaticResource TextBlockAccentLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Trigger Settings"/>
                            <CheckBox Name="cb_ControllerUseButtonTriggers" Style="{StaticResource CheckBoxBlack}" Content="Change the controller triggers to press buttons"/>
                            <TextBlock Text="Enabling this will change your triggers into buttons." TextWrapping="Wrap" Style="{StaticResource TextBlockGray}"/>

                            <TextBlock Margin="0,10,0,0" Name="textblock_ControllerDeadzoneTriggerLeft" Style="{StaticResource TextBlockBlack}" Text="Deadzone range left trigger" Tag="Deadzone range left trigger: "/>
                            <TextBlock Text="Changes the range when left trigger starts to register press." TextWrapping="Wrap" Style="{StaticResource TextBlockGray}"/>
                            <Slider Name="slider_ControllerDeadzoneTriggerLeft" Minimum="0" Maximum="95" Width="400" HorizontalAlignment="Left" Style="{StaticResource SliderBlockWhite}"/>

                            <TextBlock Margin="0,10,0,0" Name="textblock_ControllerDeadzoneTriggerRight" Style="{StaticResource TextBlockBlack}" Text="Deadzone range right trigger" Tag="Deadzone range right trigger: "/>
                            <TextBlock Text="Changes the range when right trigger starts to register press." TextWrapping="Wrap" Style="{StaticResource TextBlockGray}"/>
                            <Slider Name="slider_ControllerDeadzoneTriggerRight" Minimum="0" Maximum="95" Width="400" HorizontalAlignment="Left" Style="{StaticResource SliderBlockWhite}"/>

                            <TextBlock Margin="0,10,0,0" Name="textblock_ControllerSensitivityTriggerLeft" Style="{StaticResource TextBlockBlack}" Text="Left trigger sensitivity" Tag="Left trigger sensitivity: "/>
                            <TextBlock Text="Changes the press sensitivity on the left trigger." TextWrapping="Wrap" Style="{StaticResource TextBlockGray}"/>
                            <Slider Name="slider_ControllerSensitivityTriggerLeft" Minimum="0.10" Maximum="5.00" TickFrequency="0.02" SmallChange="0.02" LargeChange="0.05" Width="400" HorizontalAlignment="Left" Style="{StaticResource SliderBlockWhite}"/>

                            <TextBlock Margin="0,10,0,0" Name="textblock_ControllerSensitivityTriggerRight" Style="{StaticResource TextBlockBlack}" Text="Right trigger sensitivity" Tag="Right trigger sensitivity: "/>
                            <TextBlock Text="Changes the press sensitivity on the right trigger." TextWrapping="Wrap" Style="{StaticResource TextBlockGray}"/>
                            <Slider Name="slider_ControllerSensitivityTriggerRight" Minimum="0.10" Maximum="5.00" TickFrequency="0.02" SmallChange="0.02" LargeChange="0.05" Width="400" HorizontalAlignment="Left" Style="{StaticResource SliderBlockWhite}"/>

                            <TextBlock Margin="0,10,0,0" Style="{StaticResource TextBlockAccentLight}" FontSize="{DynamicResource TextSizeHuge}" Text="DPad Settings"/>
                            <CheckBox Name="cb_ControllerDPadFourWayMovement" Content="Change your DPad into four way only presses" Style="{StaticResource CheckBoxBlack}"/>
                            <TextBlock Text="Enabling this will disable the half way DPad button press directions." TextWrapping="Wrap" Style="{StaticResource TextBlockGray}"/>

                            <TextBlock Margin="0,10,0,0" Style="{StaticResource TextBlockAccentLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Thumb Stick Settings"/>
                            <CheckBox Name="cb_ControllerThumbFlipMovement" Content="Flip the left and right thumb sticks movement" Style="{StaticResource CheckBoxBlack}"/>
                            <TextBlock Text="Enabling this will flip the left and right thumb sticks." TextWrapping="Wrap" Style="{StaticResource TextBlockGray}"/>

                            <CheckBox Name="cb_ControllerThumbFlipAxesLeft" Content="Flip the axes movement on left thumb stick" Margin="0,10,0,0" Style="{StaticResource CheckBoxBlack}"/>
                            <TextBlock Text="Enabling this will flip the axes on the left thumb stick." TextWrapping="Wrap" Style="{StaticResource TextBlockGray}"/>

                            <CheckBox Name="cb_ControllerThumbFlipAxesRight" Content="Flip the axes movement on right thumb stick" Margin="0,10,0,0" Style="{StaticResource CheckBoxBlack}"/>
                            <TextBlock Text="Enabling this will flip the axes on the right thumb stick." TextWrapping="Wrap" Style="{StaticResource TextBlockGray}"/>

                            <CheckBox Name="cb_ControllerThumbReverseAxesLeft" Content="Reverse the axes movement on left thumb stick" Margin="0,10,0,0" Style="{StaticResource CheckBoxBlack}"/>
                            <TextBlock Text="Enabling this will reverse the axes on the left thumb stick." TextWrapping="Wrap" Style="{StaticResource TextBlockGray}"/>

                            <CheckBox Name="cb_ControllerThumbReverseAxesRight" Content="Reverse the axes movement on right thumb stick" Margin="0,10,0,0" Style="{StaticResource CheckBoxBlack}"/>
                            <TextBlock Text="Enabling this will reverse the axes on the right thumb stick." TextWrapping="Wrap" Style="{StaticResource TextBlockGray}"/>

                            <TextBlock Margin="0,10,0,0" Name="textblock_ControllerDeadzoneThumbLeft" Style="{StaticResource TextBlockBlack}" Text="Deadzone range left stick" Tag="Deadzone range left stick: "/>
