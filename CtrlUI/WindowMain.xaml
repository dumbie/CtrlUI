                            <ListBox Grid.Column="0" Name="listbox_ContentInfo_Gallery" Margin="0,10,10,0" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemContentScreenshot}" Style="{StaticResource ListBoxVertical}" HorizontalAlignment="Stretch" KeyboardNavigation.DirectionalNavigation="Cycle"/>

                            <ScrollViewer Grid.Column="1" Margin="0,10,0,0">
                                <StackPanel>
                                    <Button Name="btn_ContentInfo_Focus" Height="0" Width="0"/>

                                    <StackPanel Orientation="Horizontal">
                                        <Border Name="border_ContentInfo_Top" Background="{DynamicResource ApplicationWhiteBrush}" Margin="0,0,20,0" CornerRadius="10">
                                        <Image Name="image_ContentInfo_Top" Margin="5" MaxHeight="95" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <Border Name="ellipse_ContentInfo_Rating_Users" Margin="0,0,20,0" CornerRadius="100" Width="100" Height="100" Background="DimGray">
                                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Name="textblock_ContentInfo_Rating_Users" Margin="-15" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizePreTitle}" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                                <TextBlock Name="textblock_ContentInfo_Rating_Users_Count" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeMedium}" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <Border Name="border_ContentInfo_Rating_Critics" Margin="0,0,20,0" CornerRadius="20" Width="100" Height="100" Background="DimGray">
                                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Name="textblock_ContentInfo_Rating_Critics" Margin="-15" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizePreTitle}" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                                <TextBlock Name="textblock_ContentInfo_Rating_Critics_Count" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeMedium}" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>

                                    <TextBlock Name="textblock_ContentInfo_Description" Margin="0,24,0,0" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeMedium}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Grid>

                    <!-- Shortcuts -->
                    <StackPanel Margin="0,70,20,0" HorizontalAlignment="Right">
                        <Button Name="grid_Popup_ContentInformation_button_Close" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                            <StackPanel Orientation="Horizontal">
                                <Image Name="image_ContentInformation_Close" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                                <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Close.png" Height="35" Width="35"/>
                            </StackPanel>
                        </Button>
                        <Button Name="grid_Popup_ContentInformation_button_Save" Margin="0,10,0,0" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Save and use image">
                            <StackPanel Orientation="Horizontal">
                                <Image Name="image_ContentInformation_Save" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonUp.png" Height="30" Width="30" Margin="0,0,5,0"/>
                                <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Save.png" Height="35" Width="35"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Popup - HowLongToBeat -->
                <Grid Name="grid_Popup_HowLongToBeat" Visibility="Collapsed">
                    <Grid Margin="140,0,140,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock Name="grid_HowLongToBeat_Header" HorizontalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizePreTitle}" TextAlignment="Center" TextWrapping="Wrap" Text="How Long To Beat"/>
                            <Border Name="grid_HowLongToBeat_Border" HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}" Margin="0,5,0,5"/>
                        </StackPanel>

                        <Grid Grid.Row="1" Name="grid_HowLongToBeat" Margin="0,0,0,40" Visibility="Collapsed" Grid.IsSharedSizeScope="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!--  Header  -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="SharedSizeGroup"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Game" Style="{StaticResource TextBlockWhite}" FontSize="{DynamicResource TextSizeHuge}"/>
                                <TextBlock Grid.Column="1" Text="Main Story" Style="{StaticResource TextBlockWhite}" FontSize="{DynamicResource TextSizeHuge}"/>
                                <TextBlock Grid.Column="2" Text="Main + Extra" Style="{StaticResource TextBlockWhite}" FontSize="{DynamicResource TextSizeHuge}"/>
                                <TextBlock Grid.Column="3" Text="Completionist" Style="{StaticResource TextBlockWhite}" FontSize="{DynamicResource TextSizeHuge}"/>
                                <TextBlock Grid.Column="4" Text="Finished" Style="{StaticResource TextBlockWhite}" FontSize="{DynamicResource TextSizeHuge}"/>
                            </Grid>

                            <ListBox Grid.Row="1" Name="lb_HowLongToBeat" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemHowLongToBeat}" Style="{StaticResource ListBoxVertical}" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        </Grid>

                        <StackPanel Grid.Row="1" Name="stackpanel_HowLongToBeat_Status">
                            <TextBlock Name="textblock_HowLongToBeat_Unknown" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,10" Style="{StaticResource TextBlockGray}" FontSize="{DynamicResource TextSizeHuge}" TextAlignment="Center" TextWrapping="Wrap" Text="Gameplay time"/>
                            <AVStyles:AVGifPlayer Name="gif_HowLongToBeat_Loading" GifSource="pack://siteoforigin:,,,/Assets/Default/Icons/Loading.gif" Height="40" Width="40" SpeedRatio="5" HorizontalAlignment="Center" Margin="15,0,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Shortcuts -->
                    <StackPanel Margin="0,70,20,0" HorizontalAlignment="Right">
                        <Button Name="grid_Popup_HowLongToBeat_button_Close" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                            <StackPanel Orientation="Horizontal">
                                <Image Name="image_HowLongToBeat_Close" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                                <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Close.png" Height="35" Width="35"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Popup - MessageBox -->
                <Grid Name="grid_Popup_MessageBox" Visibility="Collapsed">
                    <Grid Margin="140,0,140,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="0.80*"/>
                            <RowDefinition Height="0.20*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock Name="grid_MessageBox_Question" HorizontalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizePreTitle}" TextAlignment="Center" TextWrapping="Wrap" Text="Question"/>
                            <Border Name="grid_MessageBox_Border" HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}" Margin="0,5,0,5"/>
                            <TextBlock Name="grid_MessageBox_Description" HorizontalAlignment="Center" Style="{StaticResource TextBlockGray}" FontSize="{DynamicResource TextSizeHuge}" TextAlignment="Center" TextWrapping="Wrap" Text="Description"/>
                        </StackPanel>

                        <ListBox Grid.Row="1" Name="lb_MessageBox" VerticalAlignment="Top" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemIconString}" Style="{StaticResource ListBoxVertical}" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        <TextBlock Grid.Row="2" Name="grid_MessageBox_Subtitle" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,10" Style="{StaticResource TextBlockGray}" FontSize="{DynamicResource TextSizeMedium}" TextAlignment="Center" TextWrapping="Wrap" Text="Subtitle"/>
                    </Grid>

                    <!-- Shortcuts -->
                    <StackPanel Margin="0,70,20,0" HorizontalAlignment="Right">
                        <Button Name="grid_Popup_MessageBox_button_Close" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                            <StackPanel Orientation="Horizontal">
                                <Image Name="image_MessageBox_Close" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                                <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Close.png" Height="35" Width="35"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Popup - Text Input -->
                <Grid Name="grid_Popup_TextInput" Visibility="Collapsed">
                    <Grid Margin="140,0,140,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock Name="grid_Popup_TextInput_textblock_Title" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Text="Text Input" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizePreTitle}"/>
                            <TextBox Name="grid_Popup_TextInput_textbox" FontSize="{DynamicResource TextSizeMedium}" Style="{StaticResource TextBoxWhite}" Text="Enter text..." AVStyles:TextboxPlaceholder.Placeholder="Enter text..."/>
                            <Button Name="grid_Popup_TextInput_button_ConfirmText" Style="{StaticResource ButtonAccentWhite}" HorizontalAlignment="Center" Margin="0,10,0,10" Content="Return and use the entered text"/>
                        </StackPanel>
                    </Grid>

                    <!-- Shortcuts -->
                    <StackPanel Margin="0,70,20,0" HorizontalAlignment="Right">
                        <Button Name="grid_Popup_TextInput_button_Close" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                            <StackPanel Orientation="Horizontal">
                                <Image Name="image_TextInput_Close" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                                <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Close.png" Height="35" Width="35"/>
                            </StackPanel>
                        </Button>
                        <Button Name="grid_Popup_TextInput_button_Reset" Margin="0,10,0,0" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Reset the text input">
                            <StackPanel Orientation="Horizontal">
                                <Image Name="image_TextInput_Reset" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonUp.png" Height="30" Width="30" Margin="0,0,5,0"/>
                                <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/TextClear.png" Height="35" Width="35"/>
                            </StackPanel>
                        </Button>
                        <Button Name="grid_Popup_TextInput_button_Set" Margin="0,10,0,0" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Return and use the entered text">
                            <StackPanel Orientation="Horizontal">
                                <Image Name="image_TextInput_Set" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/StartOff.png" Height="30" Width="30" Margin="0,0,5,0"/>
                                <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Check.png" Height="35" Width="35"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Popup - Move Application -->
                <Border Name="grid_Popup_MoveApplication" CornerRadius="10" BorderBrush="{DynamicResource ApplicationAccentLightBrush}" BorderThickness="3" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
                    <Border.Background>
                        <SolidColorBrush Color="{DynamicResource ApplicationBlackColor}" Opacity="0.95"/>
                    </Border.Background>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Name="btn_MoveAppLeft" Width="80" Height="80" VerticalAlignment="Top" Style="{StaticResource ButtonImageTransparentWhiteBorder}">
                                <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/MoveLeft.png"/>
                            </Button>
                            <Image Name="image_MoveAppIcon" Width="80" Height="80" VerticalAlignment="Top" Margin="10,0,10,0"/>
                            <Button Name="btn_MoveAppRight" Width="80" Height="80" VerticalAlignment="Top" Style="{StaticResource ButtonImageTransparentWhiteBorder}">
                                <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/MoveRight.png"/>
                            </Button>
                        </StackPanel>

                        <!-- Shortcuts -->
                        <Button Name="grid_Popup_MoveApplication_button_Close" Margin="0,10,0,0" Focusable="False" HorizontalAlignment="Center" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                            <StackPanel Orientation="Horizontal">
                                <Image Name="image_MoveApplication_Close" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                                <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Close.png" Height="35" Width="35"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Popup - Select Character -->
                <Border Name="grid_Popup_SelectCharacter" CornerRadius="10" BorderBrush="{DynamicResource ApplicationAccentLightBrush}" BorderThickness="3" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
                    <Border.Background>
                        <SolidColorBrush Color="{DynamicResource ApplicationBlackColor}" Opacity="0.95"/>
                    </Border.Background>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="30,10,30,10">
                        <TextBlock Name="grid_SelectCharacterPreviousText" Style="{StaticResource TextBlockGray}" FontSize="35" LineStackingStrategy="BlockLineHeight" LineHeight="100" Text="A"/>
                        <TextBlock Name="grid_SelectCharacterCurrentText" Margin="10,0,10,0" Style="{StaticResource TextBlockWhite}" FontSize="100" LineStackingStrategy="BlockLineHeight" LineHeight="100" Text="B"/>
                        <TextBlock Name="grid_SelectCharacterNextText" Style="{StaticResource TextBlockGray}" FontSize="35" LineStackingStrategy="BlockLineHeight" LineHeight="100" Text="C"/>
                    </StackPanel>
                </Border>

                <!-- Status - Disable -->
                <Border Name="grid_DisableMain" CornerRadius="10" Visibility="Collapsed">
                    <Border.Background>
                        <SolidColorBrush Color="{DynamicResource ApplicationBlackColor}" Opacity="0.95"/>
                    </Border.Background>
                    <TextBlock Name="textblock_DisableMain" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="45" TextAlignment="Center" TextWrapping="Wrap" Text="Application window is not activated."/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>