<Window x:Class="CtrlUI.WindowMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CtrlUI"
        xmlns:AVStyles="clr-namespace:ArnoldVinkCode.Styles;assembly=ArnoldVinkCode"
        RenderOptions.BitmapScalingMode="HighQuality"
        SnapsToDevicePixels="True"
        mc:Ignorable="d"
        Title="CtrlUI"
        Width="1280"
        Height="720"
        Topmost="True"
        WindowStyle="None" 
        WindowState="Normal"
        AllowsTransparency="True"
        ResizeMode="CanMinimize"
        Background="Transparent">

    <!-- Grid Application -->
    <Grid Name="grid_Application">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Grid Help -->
        <Border Name="grid_ControllerHelp" Grid.Row="0" Margin="0,0,0,5" Height="45" CornerRadius="5" Visibility="Collapsed">
            <Border.Background>
                <SolidColorBrush Color="{DynamicResource ApplicationBlackColor}" Opacity="0.98"/>
            </Border.Background>
            <Grid>
                <AVStyles:ScrollViewerLoopHorizontal ScrollLoopSpeed="30" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,20,0" Style="{StaticResource ScrollViewerHidden}">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Name="sp_ControllerHelpLeft" Orientation="Horizontal" Margin="5,5,10,5" Visibility="Collapsed">
                            <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonLeft.png" Height="25" Opacity="0.80"/>
                            <TextBlock Name="txt_ControllerHelpLeft" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="?"/>
                        </StackPanel>
                        <StackPanel Name="sp_ControllerHelpUp" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                            <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonUp.png" Height="25" Opacity="0.80"/>
                            <TextBlock Name="txt_ControllerHelpUp" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="?"/>
                        </StackPanel>
                        <StackPanel Name="sp_ControllerHelpRight" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                            <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonRight.png" Height="25" Opacity="0.80"/>
                            <TextBlock Name="txt_ControllerHelpRight" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="?"/>
                        </StackPanel>
                        <StackPanel Name="sp_ControllerHelpDown" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                            <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonDown.png" Height="25" Opacity="0.80"/>
                            <TextBlock Name="txt_ControllerHelpDown" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="?"/>
                        </StackPanel>
                        <StackPanel Name="sp_ControllerHelpBack" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                            <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/BackOff.png" Height="25" Opacity="0.80"/>
                            <TextBlock Name="txt_ControllerHelpBack" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="?"/>
                        </StackPanel>
                        <StackPanel Name="sp_ControllerHelpStart" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                            <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/StartOff.png" Height="25" Opacity="0.80"/>
                            <TextBlock Name="txt_ControllerHelpStart" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="?"/>
                        </StackPanel>
                        <StackPanel Name="sp_ControllerHelpGuide" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                            <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/GuideOff.png" Height="25" Opacity="0.80"/>
                            <TextBlock Name="txt_ControllerHelpGuide" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="?"/>
                        </StackPanel>
                        <StackPanel Name="sp_ControllerHelpLb" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                            <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/LbOff.png" Height="25" Opacity="0.80"/>
                            <TextBlock Name="txt_ControllerHelpLb" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="?"/>
                        </StackPanel>
                        <StackPanel Name="sp_ControllerHelpRb" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                            <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/RbOff.png" Height="25" Opacity="0.80"/>
                            <TextBlock Name="txt_ControllerHelpRb" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="?"/>
                        </StackPanel>
                    </StackPanel>
                </AVStyles:ScrollViewerLoopHorizontal>

                <!-- Status - Disable -->
                <Border Name="grid_DisableHelp" CornerRadius="10" Visibility="Collapsed">
                    <Border.Background>
                        <SolidColorBrush Color="{DynamicResource ApplicationBlackColor}" Opacity="0.95"/>
                    </Border.Background>
                </Border>
            </Grid>
        </Border>

        <!-- Grid Header -->
        <Border Name="grid_Header" Grid.Row="1" Margin="0,0,0,5" Height="45" CornerRadius="5">
            <Border.Background>
                <SolidColorBrush Color="{DynamicResource ApplicationBlackColor}" Opacity="0.98"/>
            </Border.Background>
            <Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Header - Buttons -->
                    <StackPanel Grid.Column="0" Name="stackpanel_TopButtons" Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0">
                        <Button Name="button_MenuHamburger" Margin="0,0,0,0" Focusable="False" Height="40" Style="{StaticResource ButtonImageTransparentWhiteBorder}" HorizontalAlignment="Left" ToolTipService.ToolTip="Open the main menu">
                            <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Hamburger.png"/>
                        </Button>
                        <Button Name="button_MenuMinimize" Margin="10,0,0,0" Focusable="False" Height="40" Style="{StaticResource ButtonImageTransparentWhiteBorder}" HorizontalAlignment="Left" ToolTipService.ToolTip="Minimize application">
                            <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/AppMinimize.png"/>
                        </Button>
                        <Button Name="button_MenuClose" Margin="10,0,0,0" Focusable="False" Height="40" Style="{StaticResource ButtonImageTransparentWhiteBorder}" HorizontalAlignment="Left" ToolTipService.ToolTip="Close application">
                            <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/AppClose.png"/>
                        </Button>
                        <Button Name="button_MenuSorting" Margin="10,0,0,0" Focusable="False" Height="40" Style="{StaticResource ButtonImageTransparentWhiteBorder}" HorizontalAlignment="Left" ToolTipService.ToolTip="Sort apps or files">
                            <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Sorting.png"/>
                        </Button>
                    </StackPanel>

                    <!-- Header - Icons -->
                    <AVStyles:ScrollViewerLoopHorizontal Grid.Column="1" ScrollLoopSpeed="30" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0,10,0" Style="{StaticResource ScrollViewerHidden}">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Name="stackpanel_Menu_Controller0" Opacity="0.40">
                                <Image Name="img_Menu_Controller0" Width="30" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Controller-Accent.png"/>
                                <Border Name="border_Menu_Controller0" CornerRadius="2" HorizontalAlignment="Center" Width="15" Height="3" SnapsToDevicePixels="True"/>
                            </StackPanel>
                            <StackPanel Name="stackpanel_Menu_Controller1" Opacity="0.40">
                                <Image Name="img_Menu_Controller1" Width="30" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Controller.png"/>
                                <Border Name="border_Menu_Controller1" CornerRadius="2" HorizontalAlignment="Center" Width="15" Height="3" SnapsToDevicePixels="True"/>
                            </StackPanel>
                            <StackPanel Name="stackpanel_Menu_Controller2" Opacity="0.40">
                                <Image Name="img_Menu_Controller2" Width="30" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Controller.png"/>
                                <Border Name="border_Menu_Controller2" CornerRadius="2" HorizontalAlignment="Center" Width="15" Height="3" SnapsToDevicePixels="True"/>
                            </StackPanel>
                            <StackPanel Name="stackpanel_Menu_Controller3" Opacity="0.40">
                                <Image Name="img_Menu_Controller3" Width="30" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Controller.png"/>
                                <Border Name="border_Menu_Controller3" CornerRadius="2" HorizontalAlignment="Center" Width="15" Height="3" SnapsToDevicePixels="True"/>
                            </StackPanel>

                            <Image Name="img_Menu_SteamStatus" Opacity="0.40" Width="30" Margin="25,0,0,0"/>
                            <Image Name="img_Menu_UbisoftStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                            <Image Name="img_Menu_EADesktopStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                            <Image Name="img_Menu_GoGStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                            <Image Name="img_Menu_EpicStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                            <Image Name="img_Menu_BattleNetStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                            <Image Name="img_Menu_RockstarStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                            <Image Name="img_Menu_AmazonStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                            <Image Name="img_Menu_IndieGalaStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                            <Image Name="img_Menu_ItchIOStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                            <Image Name="img_Menu_HumbleStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                            <Image Name="img_Menu_DiscordStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>

                            <Image Name="img_Menu_FpsOverlayerStatus" Opacity="0.40" Width="30" Margin="25,0,0,0"/>
                            <Image Name="img_Menu_ScreenCaptureToolStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                            <Image Name="img_Menu_DirectXInputStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                        </StackPanel>
                    </AVStyles:ScrollViewerLoopHorizontal>

                    <!-- Header - Clock -->
                    <StackPanel Grid.Column="2" Name="grid_ClockBattery" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0">
                        <Image Name="img_Main_VolumeMute" Visibility="Collapsed" VerticalAlignment="Center" Margin="0,0,5,0" Source="pack://siteoforigin:,,,/Assets/Default/Icons/VolumeMute.png" Height="38"/>
                        <Image Name="img_Main_MicrophoneMute" Visibility="Collapsed" VerticalAlignment="Center" Margin="0,0,5,0" Source="pack://siteoforigin:,,,/Assets/Default/Icons/MicrophoneMute.png" Height="38"/>
                        <Image Name="img_Main_Battery" Visibility="Collapsed" VerticalAlignment="Center" Margin="0,0,5,0" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Battery/BatteryVerDis100.png" Height="38"/>
                        <TextBlock Name="txt_Main_Battery" Visibility="Collapsed" Margin="0,0,5,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" Text="0%"/>

                        <Grid Margin="0,0,5,0" Height="40" Width="40">
                            <Image Name="img_Main_Time_Face" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="40"/>
                            <Image Name="img_Main_Time_Hour" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="40"/>
                            <Image Name="img_Main_Time_Minute" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="40"/>
                            <Image Name="img_Main_Time_Center" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="40"/>
                        </Grid>

                        <TextBlock Name="txt_Main_Date" VerticalAlignment="Center" FontSize="{DynamicResource TextSizeHuge}" Style="{StaticResource TextBlockWhiteLight}"/>
                        <TextBlock Name="txt_Main_Time" VerticalAlignment="Center" FontSize="{DynamicResource TextSizeHuge}" Style="{StaticResource TextBlockWhiteLight}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Grid Main -->
        <Border Grid.Row="2" CornerRadius="5">
            <Border.Background>
                <SolidColorBrush Color="{DynamicResource ApplicationBlackColor}" Opacity="0.98"/>
            </Border.Background>
            <Grid>
                <Grid Name="grid_Main">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Category Selection -->
                    <StackPanel Grid.Row="0" Margin="20,10,20,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <Image Name="image_Category_LB" Visibility="Collapsed" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/LbOff.png" Height="25" Opacity="0.80" Margin="0,0,10,0"/>
                            </StackPanel>

                            <AVStyles:ScrollViewerLoopHorizontal Grid.Column="1" ScrollLoopSpeed="30" VerticalAlignment="Center" IsHitTestVisible="True" Style="{StaticResource ScrollViewerHidden}">
                                <StackPanel Orientation="Horizontal">
                                    <Button Name="button_Category_Menu_Apps" Focusable="False" HorizontalAlignment="Left" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="0,0,10,0">
                                        <TextBlock Name="textblock_Category_Menu_Apps" Style="{StaticResource TextBlockGrayLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Apps"/>
                                    </Button>
                                    <Button Name="button_Category_Menu_Games" Focusable="False" HorizontalAlignment="Left" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="0,0,10,0">
                                        <TextBlock Name="textblock_Category_Menu_Games" Style="{StaticResource TextBlockGrayLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Games"/>
                                    </Button>
                                    <Button Name="button_Category_Menu_Emulators" Focusable="False" HorizontalAlignment="Left" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="0,0,10,0">
                                        <TextBlock Name="textblock_Category_Menu_Emulators" Style="{StaticResource TextBlockGrayLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Emulators"/>
                                    </Button>
                                    <Button Name="button_Category_Menu_Launchers" Focusable="False" HorizontalAlignment="Left" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="0,0,10,0">
                                        <TextBlock Name="textblock_Category_Menu_Launchers" Style="{StaticResource TextBlockGrayLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Launchers"/>
                                    </Button>
                                    <Button Name="button_Category_Menu_Shortcuts" Focusable="False" HorizontalAlignment="Left" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="0,0,10,0">
                                        <TextBlock Name="textblock_Category_Menu_Shortcuts" Style="{StaticResource TextBlockGrayLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Shortcuts"/>
                                    </Button>
                                    <Button Name="button_Category_Menu_Processes" Focusable="False" HorizontalAlignment="Left" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="0,0,10,0">
                                        <TextBlock Name="textblock_Category_Menu_Processes" Style="{StaticResource TextBlockGrayLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Processes"/>
                                    </Button>
                                    <Button Name="button_Category_Menu_Gallery" Focusable="False" HorizontalAlignment="Left" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="0,0,10,0">
                                        <TextBlock Name="textblock_Category_Menu_Gallery" Style="{StaticResource TextBlockGrayLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Gallery"/>
                                    </Button>
                                    <Button Name="button_Category_Menu_Search" Focusable="False" HorizontalAlignment="Left" Style="{StaticResource ButtonImageTransparentNoBorder}" Margin="0,0,10,0">
                                        <TextBlock Name="textblock_Category_Menu_Search" Style="{StaticResource TextBlockGrayLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Search"/>
                                    </Button>
                                </StackPanel>
                            </AVStyles:ScrollViewerLoopHorizontal>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <AVStyles:AVGifPlayer Name="gif_List_Loading" GifSource="pack://siteoforigin:,,,/Assets/Default/Icons/Loading.gif" Height="25" Width="25" SpeedRatio="5" HorizontalAlignment="Right" Margin="10,0,0,0"/>
                                <TextBlock Name="textblock_Category_Count" Style="{StaticResource TextBlockAccentLight}" FontSize="{DynamicResource TextSizeHuge}" Margin="10,0,0,0"/>
                                <Image Name="image_Category_RB" Visibility="Collapsed" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/RbOff.png" Height="25" Opacity="0.80" Margin="10,0,0,0"/>
                            </StackPanel>
                        </Grid>

                        <Border Margin="0,5,0,0" HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}"/>

                        <StackPanel Name="stackpanel_Search_Interface" Margin="0,5,0,0" Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Name="grid_Search_textbox" Margin="0,0,5,0" FontSize="{DynamicResource TextSizeMedium}" Style="{StaticResource TextBoxWhite}" Text="Search application..." AVStyles:TextboxPlaceholder.Placeholder="Search application..."/>
                                <Button Grid.Column="1" Name="grid_Search_button_Reset" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Reset the search term">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Name="image_Search_Reset" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonUp.png" Height="30" Width="30" Margin="0,0,10,0"/>
                                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/TextClear.png" Height="35" Width="35"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                            <TextBlock Name="grid_Search_textblock_Result" Style="{StaticResource TextBlockGrayLight}" FontSize="{DynamicResource TextSizeHuge}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Application Lists -->
                    <Grid Grid.Row="1" Margin="20,0,20,10">
                        <ListBox Name="lb_Games" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemApp}" Style="{StaticResource ListBoxWrapPanelVertical}" HorizontalAlignment="Stretch" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        <ListBox Name="lb_Apps" Visibility="Collapsed" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemApp}" Style="{StaticResource ListBoxWrapPanelVertical}" HorizontalAlignment="Stretch" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        <ListBox Name="lb_Emulators" Visibility="Collapsed" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemApp}" Style="{StaticResource ListBoxWrapPanelVertical}" HorizontalAlignment="Stretch" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        <ListBox Name="lb_Launchers" Visibility="Collapsed" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemApp}" Style="{StaticResource ListBoxWrapPanelVertical}" HorizontalAlignment="Stretch" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        <ListBox Name="lb_Shortcuts" Visibility="Collapsed" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemApp}" Style="{StaticResource ListBoxWrapPanelVertical}" HorizontalAlignment="Stretch" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        <ListBox Name="lb_Processes" Visibility="Collapsed" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemApp}" Style="{StaticResource ListBoxWrapPanelVertical}" HorizontalAlignment="Stretch" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        <ListBox Name="lb_Gallery" Visibility="Collapsed" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemGallery}" Style="{StaticResource ListBoxWrapPanelVertical}" HorizontalAlignment="Stretch" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        <ListBox Name="lb_Search" Visibility="Collapsed" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemSearch}" Style="{StaticResource ListBoxWrapPanelVertical}" HorizontalAlignment="Stretch" KeyboardNavigation.DirectionalNavigation="Continue"/>
                    </Grid>
                </Grid>

                <!-- Popup - Main Menu -->
                <Grid Name="grid_Popup_MainMenu" Visibility="Collapsed">
                    <Grid Margin="140,0,140,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock HorizontalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizePreTitle}" TextAlignment="Center" TextWrapping="Wrap" Text="Main Menu"/>
                            <Border HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}" Margin="0,5,0,5"/>
                        </StackPanel>

                        <ListBox Grid.Row="1" Name="listbox_MainMenu" SelectedIndex="0" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemIconString}" Style="{StaticResource ListBoxVertical}" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                    </Grid>

                    <!-- Shortcuts -->
                    <StackPanel Margin="0,70,20,0" HorizontalAlignment="Right">
                        <Button Name="grid_Popup_MainMenu_button_Close" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                            <StackPanel Orientation="Horizontal">
                                <Image Name="image_MainMenu_Close" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                                <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Close.png" Height="35" Width="35"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Popup - Welcome -->
                <Grid Name="grid_Popup_Welcome" Margin="140,0,140,0" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock HorizontalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizePreTitle}" TextAlignment="Center" TextWrapping="Wrap" Text="Welcome to Controller User Interface"/>
                        <Border HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}" Margin="0,5,0,5"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" Style="{StaticResource ScrollViewerVertical}">
                        <StackPanel>
                            <TextBlock HorizontalAlignment="Center" Style="{StaticResource TextBlockWhite}" FontSize="{StaticResource TextSizeLarge}" TextAlignment="Center" TextWrapping="Wrap" Text="Now it's time to quickly setup some basics to get you going along with the application."/>
                            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Style="{StaticResource TextBlockWhite}" FontSize="{StaticResource TextSizeLarge}" TextAlignment="Center" TextWrapping="Wrap" Text="Connect your controller and set it up in DirectXInput and then you will able to use it in this application."/>
                            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Style="{StaticResource TextBlockWhite}" FontSize="{StaticResource TextSizeLarge}" TextAlignment="Center" TextWrapping="Wrap" Text="Once you have a controller connected through DirectXInput you can always access CtrlUI by pressing on the 'Guide' button, holding down the 'Guide' button will open an onscreen keyboard."/>
                            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Style="{StaticResource TextBlockWhite}" FontSize="{StaticResource TextSizeLarge}" TextAlignment="Center" TextWrapping="Wrap" Text="If you are running into an issue or can't find something, you might find your answer on the 'Help' page."/>
                            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Style="{StaticResource TextBlockGray}" FontSize="{StaticResource TextSizeLarge}" TextAlignment="Center" TextWrapping="Wrap" Text="Here are some popular applications for you to setup and easily launch later on, you can add all the applications you want later on by clicking on the 'Add application' button in the main menu."/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                                <Button Name="grid_Popup_Welcome_button_Edge" Height="75" Width="75" Style="{StaticResource ButtonImageTransparentWhiteBorder}">
                                    <Image Name="grid_Popup_Welcome_img_Edge"/>
                                </Button>
                                <Button Name="grid_Popup_Welcome_button_Spotify" Margin="10,0,0,0" Height="75" Width="75" Style="{StaticResource ButtonImageTransparentWhiteBorder}">
                                    <Image Name="grid_Popup_Welcome_img_Spotify"/>
                                </Button>
                                <Button Name="grid_Popup_Welcome_button_Kodi" Margin="10,0,0,0" Height="75" Width="75" Style="{StaticResource ButtonImageTransparentWhiteBorder}">
                                    <Image Name="grid_Popup_Welcome_img_Kodi"/>
                                </Button>
                                <Button Name="grid_Popup_Welcome_button_PSRemote" Margin="10,0,0,0" Height="75" Width="75" Style="{StaticResource ButtonImageTransparentWhiteBorder}">
                                    <Image Name="grid_Popup_Welcome_img_PSRemote"/>
                                </Button>
                                <Button Name="grid_Popup_Welcome_button_Discord" Margin="10,0,0,0" Height="75" Width="75" Style="{StaticResource ButtonImageTransparentWhiteBorder}">
                                    <Image Name="grid_Popup_Welcome_img_Discord"/>
                                </Button>
                                <Button Name="grid_Popup_Welcome_button_Steam" Margin="10,0,0,0" Height="75" Width="75" Style="{StaticResource ButtonImageTransparentWhiteBorder}">
                                    <Image Name="grid_Popup_Welcome_img_Steam"/>
                                </Button>
