                <Grid Name="grid_Popup_TextInput" Visibility="Collapsed">
                    <Grid Margin="140,0,140,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock Name="grid_Popup_TextInput_textblock_Title" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Text="Text Input" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeSubTitle}"/>

                            <Grid>
                                <TextBox Name="grid_Popup_TextInput_textbox" VerticalContentAlignment="Center" Margin="0,0,65,0" FontSize="{DynamicResource TextSizeMedium}" Style="{StaticResource TextBoxTransparentWhite}" Text="Enter text..." styles:TextboxPlaceholder.Placeholder="Enter text..."/>
                                <Button Name="grid_Popup_TextInput_button_Reset" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Reset the text input">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonUp.png" Height="22" Width="22" Margin="0,0,5,0"/>
                                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/TextClear.png" Height="25" Width="25"/>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <Border HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}" Margin="0,5,0,5"/>
                            <Button Name="grid_Popup_TextInput_button_ConfirmText" Style="{StaticResource ButtonAccentWhite}" HorizontalAlignment="Center" Margin="0,10,0,10" Content="Return and use the entered text"/>
                        </StackPanel>
                    </Grid>

                    <!-- Shortcuts -->
                    <StackPanel Margin="0,55,20,0" HorizontalAlignment="Right">
                        <Button Name="grid_Popup_TextInput_button_Close" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                                <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Close.png" Height="35" Width="35" Margin="0,0,-5,0" />
                            </StackPanel>
                        </Button>
                        <Button Name="grid_Popup_TextInput_button_KeyboardControllerIcon" Margin="0,10,0,0" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Open or close the keyboard">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/GuideHoldOff.png" Height="30" Opacity="0.80" Margin="0,0,10,0"/>
                                <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Keyboard.png" Height="35" Width="35" Margin="0,0,-2,0" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Status - Select Character -->
                <Grid Name="grid_SelectCharacter" VerticalAlignment="Center" Visibility="Collapsed">
                    <Grid.Background>
                        <SolidColorBrush Color="{DynamicResource ApplicationBlackColor}" Opacity="0.60"/>
                    </Grid.Background>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <TextBlock Name="grid_SelectCharacterPreviousText" Style="{StaticResource TextBlockGray}" FontSize="35" LineStackingStrategy="BlockLineHeight" LineHeight="100" Text="A"/>
                        <TextBlock Name="grid_SelectCharacterCurrentText" Margin="10,0,10,0" Style="{StaticResource TextBlockWhite}" FontSize="100" LineStackingStrategy="BlockLineHeight" LineHeight="100" Text="B"/>
                        <TextBlock Name="grid_SelectCharacterNextText" Style="{StaticResource TextBlockGray}" FontSize="35" LineStackingStrategy="BlockLineHeight" LineHeight="100" Text="C"/>
                    </StackPanel>
                </Grid>

                <!-- Status - Disable -->
                <Border Name="grid_DisableMain" CornerRadius="10" Visibility="Collapsed">
                    <Border.Background>
                        <SolidColorBrush Color="{DynamicResource ApplicationBlackColor}" Opacity="0.90"/>
                    </Border.Background>
                    <TextBlock Name="textblock_DisableMain" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="45" TextAlignment="Center" TextWrapping="Wrap" Text="Application window is not activated."/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>