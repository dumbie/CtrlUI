                <ListBox Grid.Row="2" Margin="0,10,0,0" Name="lb_ProfileManager" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListboxItemProfile}" Style="{StaticResource ListBoxVertical}"/>
            </Grid>

            <!-- Shortcuts -->
            <StackPanel Margin="0,55,20,0" HorizontalAlignment="Right">
                <Button Name="grid_Popup_ProfileManager_button_ControllerRight" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Close.png" Height="35" Width="35" Margin="0,0,-5,0" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Popup - Move Application -->
        <Grid Name="grid_Popup_MoveApplication" Visibility="Collapsed">
            <Grid Margin="150,35,150,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock HorizontalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizePreTitle}" TextAlignment="Center" TextWrapping="Wrap" Text="Move application"/>
                    <Border HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}" Margin="0,5,0,5"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Name="btn_MoveAppLeft" Width="80" Height="80" VerticalAlignment="Top" Style="{StaticResource ButtonImageTransparentWhiteBorder}">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/MoveLeft.png"/>
                    </Button>
                    <Image Name="image_MoveAppIcon" Width="80" Height="80" VerticalAlignment="Top" Margin="10,0,10,0"/>
                    <Button Name="btn_MoveAppRight" Width="80" Height="80" VerticalAlignment="Top" Style="{StaticResource ButtonImageTransparentWhiteBorder}">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/MoveRight.png"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Shortcuts -->
            <StackPanel Margin="0,55,20,0" HorizontalAlignment="Right">
                <Button Name="grid_Popup_MoveApplication_button_Close" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Close.png" Height="35" Width="35" Margin="0,0,-5,0" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Popup - MessageBox -->
        <Grid Name="grid_Popup_MessageBox" Visibility="Collapsed">
            <Grid Margin="150,35,150,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="0.80*"/>
                    <RowDefinition Height="0.20*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Name="grid_MessageBox_Question" HorizontalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizePreTitle}" TextAlignment="Center" TextWrapping="Wrap" Text="Question"/>
                    <Border HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}" Margin="0,5,0,5"/>
                    <TextBlock Name="grid_MessageBox_Description" HorizontalAlignment="Center" Style="{StaticResource TextBlockGray}" FontSize="{DynamicResource TextSizeHuge}" TextAlignment="Center" TextWrapping="Wrap" Text="Description"/>
                </StackPanel>

                <ListBox Grid.Row="1" Name="lb_MessageBox" VerticalAlignment="Top" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemString}" Style="{StaticResource ListBoxVertical}"/>
                <TextBlock Grid.Row="2" Name="grid_MessageBox_Subtitle" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,10" Style="{StaticResource TextBlockGray}" FontSize="{DynamicResource TextSizeMedium}" TextAlignment="Center" TextWrapping="Wrap" Text="Subtitle"/>
            </Grid>

            <!-- Shortcuts -->
            <StackPanel Margin="0,55,20,0" HorizontalAlignment="Right">
                <Button Name="grid_Popup_MessageBox_button_Close" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Close.png" Height="35" Width="35" Margin="0,0,-5,0" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Popup - Text Input -->
        <Grid Name="grid_Popup_TextInput" Visibility="Collapsed">
            <Grid Margin="150,35,150,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Name="grid_Popup_TextInput_textblock_Title" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Text="Text Input" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeTitle}"/>

                    <Grid>
                        <TextBox Name="grid_Popup_TextInput_textbox" VerticalContentAlignment="Center" Margin="0,0,65,0" FontSize="{DynamicResource TextSizeMedium}" Style="{StaticResource TextBoxTransparent}" Text="Enter text..." styles:TextboxPlaceholder.Placeholder="Enter text..."/>
                        <Button Name="grid_Popup_TextInput_button_Reset" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Reset the text input">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonUp.png" Height="22" Width="22" Margin="0,0,5,0"/>
                                <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/TextClear.png" Height="25" Width="25"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <Border HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}" Margin="0,5,0,5"/>
                    <Button Name="grid_Popup_TextInput_button_ConfirmText" Style="{StaticResource ButtonAccentWhite}" HorizontalAlignment="Center" Margin="0,10,0,10" Content="Return and use the entered text"/>
                </StackPanel>
            </Grid>

            <!-- Shortcuts -->
            <StackPanel Margin="0,55,20,0" HorizontalAlignment="Right">
                <Button Name="grid_Popup_TextInput_button_Close" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Close.png" Height="35" Width="35" Margin="0,0,-5,0" />
                    </StackPanel>
                </Button>
                <Button Name="grid_Popup_TextInput_button_KeyboardControllerIcon" Margin="0,10,0,0" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Open or close the keyboard">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/GuideHoldOff.png" Height="30" Opacity="0.80" Margin="0,0,10,0"/>
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Keyboard.png" Height="35" Width="35" Margin="0,0,-2,0" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Status - Select Character -->
        <Grid Name="grid_SelectCharacter" VerticalAlignment="Center" Visibility="Collapsed">
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource ApplicationBlackColor}" Opacity="0.60"/>
            </Grid.Background>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Name="grid_SelectCharacterPreviousText" Style="{StaticResource TextBlockGray}" FontSize="35" LineStackingStrategy="BlockLineHeight" LineHeight="100" Text="A"/>
                <TextBlock Name="grid_SelectCharacterCurrentText" Margin="10,0,10,0" Style="{StaticResource TextBlockWhite}" FontSize="100" LineStackingStrategy="BlockLineHeight" LineHeight="100" Text="B"/>
                <TextBlock Name="grid_SelectCharacterNextText" Style="{StaticResource TextBlockGray}" FontSize="35" LineStackingStrategy="BlockLineHeight" LineHeight="100" Text="C"/>
            </StackPanel>
        </Grid>

        <!-- Status - Window Active -->
        <Grid Name="grid_WindowActive" Visibility="Collapsed">
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource ApplicationBlackColor}" Opacity="0.90"/>
            </Grid.Background>
            <TextBlock Name="grid_WindowActiveText" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="45" TextAlignment="Center" TextWrapping="Wrap" Text="Application window is not activated."/>
        </Grid>

        <!-- Status - Current Date -->
        <Grid MinHeight="40" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,10,0,0">
            <TextBlock Name="txt_Main_Date" VerticalAlignment="Center" FontSize="{DynamicResource TextSizeHuge}" Style="{StaticResource TextBlockWhiteLight}"/>
        </Grid>

        <!-- Status - Clock and Battery -->
        <StackPanel Name="grid_ClockBattery" Orientation="Horizontal" MinHeight="40" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,20,0">
            <Image Name="img_Main_VolumeMute" Visibility="Collapsed" VerticalAlignment="Center" Margin="0,0,5,0" Source="pack://siteoforigin:,,,/Assets/Default/Icons/VolumeMute.png" Height="38"/>
            <Image Name="img_Main_Battery" Visibility="Collapsed" VerticalAlignment="Center" Margin="0,0,5,0" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Battery/BatteryVerDis100.png" Height="38"/>
            <TextBlock Name="txt_Main_Battery" Visibility="Collapsed" Margin="0,0,5,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" Text="0%"/>

            <Grid Name="grid_Main_Time" Margin="0,0,5,0" Visibility="Collapsed" Height="40" Width="40">
                <Image Name="img_Main_Time_Face" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="40"/>
                <Image Name="img_Main_Time_Hour" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="40"/>
                <Image Name="img_Main_Time_Minute" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="40"/>
                <Image Name="img_Main_Time_Center" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="40"/>
            </Grid>

            <TextBlock Name="txt_Main_Time" VerticalAlignment="Center" FontSize="{DynamicResource TextSizeHuge}" Style="{StaticResource TextBlockWhiteLight}"/>
        </StackPanel>
    </Grid>
</Window>