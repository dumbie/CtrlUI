<Window x:Class="CtrlUI.WindowMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CtrlUI"
        xmlns:styles="clr-namespace:ArnoldVinkCode.Styles;assembly=LibraryShared"
        RenderOptions.BitmapScalingMode="HighQuality"
        mc:Ignorable="d"
        Title="CtrlUI"
        Width="1280"
        Height="720"
        MinWidth="1024"
        MinHeight="720"
        Background="{DynamicResource ApplicationBlackBrush}">

    <!-- Grid Application -->
    <Grid Name="grid_App">
        <!-- Background Media -->
        <MediaElement Name="grid_Video_Background" IsEnabled="False" Stretch="UniformToFill"/>

        <!-- Grid Main -->
        <Grid Name="grid_Main">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Buttons -->
            <StackPanel Name="stackpanel_TopButtons" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Name="button_MenuHamburger" Margin="15,10,0,0" Focusable="False" Height="40" Style="{StaticResource ButtonImageTransparentWhiteBorder}" HorizontalAlignment="Left" ToolTipService.ToolTip="Open the main menu">
                    <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Hamburger.png"/>
                </Button>
                <Button Name="button_MenuSearch" Margin="10,10,0,0" Focusable="False" Height="40" Style="{StaticResource ButtonImageTransparentWhiteBorder}" HorizontalAlignment="Left" ToolTipService.ToolTip="Open the search panel">
                    <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Search.png"/>
                </Button>
                <Button Name="button_MenuSorting" Margin="10,10,0,0" Focusable="False" Height="40" Style="{StaticResource ButtonImageTransparentWhiteBorder}" HorizontalAlignment="Left" ToolTipService.ToolTip="Sort by name">
                    <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Sorting.png"/>
                </Button>
            </StackPanel>

            <!-- Status - Media Information -->
            <styles:ScrollViewerLoopHorizontal x:Name="main_Media_Information" MinHeight="40" VerticalAlignment="Top" HorizontalAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Hidden" IsHitTestVisible="False" Style="{StaticResource ScrollViewerHorizontal}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Name="main_Media_Information_Artist" VerticalAlignment="Center" Style="{StaticResource TextBlockAccentLight}" FontSize="{DynamicResource TextSizeMedium}"/>
                    <TextBlock Name="main_Media_Information_Title" VerticalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeMedium}"/>
                </StackPanel>
            </styles:ScrollViewerLoopHorizontal>

            <!-- Application Lists -->
            <ScrollViewer Grid.Row="1" Style="{StaticResource ScrollViewerVertical}">
                <StackPanel Margin="20,10,20,0">
                    <StackPanel Name="sp_Games">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Games"/>
                            <TextBlock Name="tb_Games_Count" Margin="5,0,0,3.5" VerticalAlignment="Bottom" Style="{StaticResource TextBlockAccent}"/>
                        </StackPanel>
                        <Border HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}"/>
                        <ListBox Name="lb_Games" SelectionMode="Single" Margin="0,5,0,0" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemApp}" Style="{StaticResource ListBoxHorizontal}"/>
                    </StackPanel>
                    <StackPanel Name="sp_Apps">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Apps &amp; Media"/>
                            <TextBlock Name="tb_Apps_Count" Margin="5,0,0,3.5" VerticalAlignment="Bottom" Style="{StaticResource TextBlockAccent}"/>
                        </StackPanel>
                        <Border HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}"/>
                        <ListBox Name="lb_Apps" SelectionMode="Single" Margin="0,5,0,0" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemApp}" Style="{StaticResource ListBoxHorizontal}"/>
                    </StackPanel>
                    <StackPanel Name="sp_Emulators">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Emulators"/>
                            <TextBlock Name="tb_Emulators_Count" Margin="5,0,0,3.5" VerticalAlignment="Bottom" Style="{StaticResource TextBlockAccent}"/>
                        </StackPanel>
                        <Border HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}"/>
                        <ListBox Name="lb_Emulators" SelectionMode="Single" Margin="0,5,0,0" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemApp}" Style="{StaticResource ListBoxHorizontal}"/>
                    </StackPanel>
                    <StackPanel Name="sp_Launchers">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Launchers"/>
                            <TextBlock Grid.Column="1" Name="tb_Launchers_Count" Margin="5,0,0,3.5" VerticalAlignment="Bottom" Style="{StaticResource TextBlockAccent}"/>
                            <styles:AVGifPlayer Grid.Column="2" Name="gif_Launchers_Loading" GifSource="pack://siteoforigin:,,,/Assets/Default/Icons/Loading.gif" Height="25" SpeedRatio="5" HorizontalAlignment="Right"/>
                        </Grid>
                        <Border HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}"/>
                        <ListBox Name="lb_Launchers" SelectionMode="Single" Margin="0,5,0,0" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemApp}" Style="{StaticResource ListBoxHorizontal}"/>
                    </StackPanel>
                    <StackPanel Name="sp_Shortcuts">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Shortcuts"/>
                            <TextBlock Grid.Column="1" Name="tb_Shortcuts_Count" Margin="5,0,0,3.5" VerticalAlignment="Bottom" Style="{StaticResource TextBlockAccent}"/>
                            <styles:AVGifPlayer Grid.Column="2" Name="gif_Shortcuts_Loading" GifSource="pack://siteoforigin:,,,/Assets/Default/Icons/Loading.gif" Height="25" SpeedRatio="5" HorizontalAlignment="Right"/>
                        </Grid>
                        <Border HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}"/>
                        <ListBox Name="lb_Shortcuts" SelectionMode="Single" Margin="0,5,0,0" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemApp}" Style="{StaticResource ListBoxHorizontal}"/>
                    </StackPanel>
                    <StackPanel Name="sp_Processes">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Processes"/>
                            <TextBlock Name="tb_Processes_Count" Margin="5,0,0,3.5" VerticalAlignment="Bottom" Style="{StaticResource TextBlockAccent}"/>
                        </StackPanel>
                        <Border HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}"/>
                        <ListBox Name="lb_Processes" SelectionMode="Single" Margin="0,5,0,0" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemApp}" Style="{StaticResource ListBoxHorizontal}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Controller Help -->
            <styles:ScrollViewerLoopHorizontal x:Name="sp_ControllerHelp" Grid.Row="2" VerticalAlignment="Bottom" Style="{StaticResource ScrollViewerHorizontal}">
                <StackPanel Opacity="0.50" Orientation="Horizontal">
                    <StackPanel.Background>
                        <SolidColorBrush Color="{DynamicResource ApplicationBlackColor}" Opacity="0.80"/>
                    </StackPanel.Background>

                    <StackPanel Name="sp_ControllerHelpLeft" Orientation="Horizontal" Margin="5,5,10,5" Visibility="Collapsed">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonLeft.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="txt_ControllerHelpLeft" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Left"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpUp" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonUp.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="txt_ControllerHelpUp" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Up"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpRight" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonRight.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="txt_ControllerHelpRight" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Right"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpDown" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonDown.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="txt_ControllerHelpDown" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Down"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpBack" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/BackOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="txt_ControllerHelpBack" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Back"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpStart" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/StartOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="txt_ControllerHelpStart" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Start"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpGuide" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/GuideOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="txt_ControllerHelpGuide" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Switch app"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpGuideHold" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/GuideHoldOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Keyboard"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpScreenshot" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/LbOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="+"/>
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/BackOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Screenshot"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpLb" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/LbOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="txt_ControllerHelpLb" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Start"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpAltF4" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/LbOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="+"/>
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/StartOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Alt+F4"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpRb" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/RbOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="txt_ControllerHelpRb" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Start"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpAltTab" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/RbOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="+"/>
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/BackOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Name="tb_ControllerHelpAltTab" Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Win+Tab"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpAltEnter" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/RbOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="+"/>
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/StartOff.png" Height="25" Opacity="0.80"/>
                        <TextBlock Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Alt+Enter"/>
                    </StackPanel>
                    <StackPanel Name="sp_ControllerHelpVolume" Orientation="Horizontal" Margin="0,5,10,5" Visibility="Collapsed">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/LtOff.png" Height="25" Opacity="0.80"/>
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/RtOff.png" Height="25" Margin="5,0,0,0" Opacity="0.80"/>
                        <TextBlock Margin="5,0,0,0" VerticalAlignment="Center" Style="{StaticResource TextBlockWhite}" Text="Volume"/>
                    </StackPanel>
                </StackPanel>
            </styles:ScrollViewerLoopHorizontal>
        </Grid>

        <!-- Popup - Main Menu -->
        <Grid Name="grid_Popup_MainMenu" Visibility="Collapsed">
            <Grid Margin="150,35,150,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <StackPanel Name="stackpanel_Menu_Controller0" Opacity="0.40">
                            <Image Name="img_Menu_Controller0" Width="30" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Controller-Accent.png"/>
                            <Border CornerRadius="2" HorizontalAlignment="Center" Background="#0ABEF0" Width="15" Height="3" SnapsToDevicePixels="True"/>
                        </StackPanel>
                        <StackPanel Name="stackpanel_Menu_Controller1" Opacity="0.40">
                            <Image Name="img_Menu_Controller1" Width="30" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Controller.png"/>
                            <Border CornerRadius="2" HorizontalAlignment="Center" Background="#F0140A" Width="15" Height="3" SnapsToDevicePixels="True"/>
                        </StackPanel>
                        <StackPanel Name="stackpanel_Menu_Controller2" Opacity="0.40">
                            <Image Name="img_Menu_Controller2" Width="30" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Controller.png"/>
                            <Border CornerRadius="2" HorizontalAlignment="Center" Background="#14F00A" Width="15" Height="3" SnapsToDevicePixels="True"/>
                        </StackPanel>
                        <StackPanel Name="stackpanel_Menu_Controller3" Opacity="0.40">
                            <Image Name="img_Menu_Controller3" Width="30" Source="pack://siteoforigin:,,,/Assets/Default/Icons/Controller.png"/>
                            <Border CornerRadius="2" HorizontalAlignment="Center" Background="#F0D205" Width="15" Height="3" SnapsToDevicePixels="True"/>
                        </StackPanel>

                        <Image Name="img_Menu_SteamStatus" Opacity="0.40" Width="30" Margin="25,0,0,0"/>
                        <Image Name="img_Menu_UbisoftStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                        <Image Name="img_Menu_EADesktopStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                        <Image Name="img_Menu_GoGStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                        <Image Name="img_Menu_EpicStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                        <Image Name="img_Menu_BethesdaStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                        <Image Name="img_Menu_BattleNetStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                        <Image Name="img_Menu_RockstarStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                        <Image Name="img_Menu_DiscordStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>

                        <Image Name="img_Menu_FpsOverlayerStatus" Opacity="0.40" Width="30" Margin="25,0,0,0"/>
                        <Image Name="img_Menu_DirectXInputStatus" Opacity="0.40" Width="30" Margin="5,0,0,0"/>
                    </StackPanel>

                    <TextBlock HorizontalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeTitle}" TextAlignment="Center" TextWrapping="Wrap" Text="Main Menu"/>
                    <Border HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}" Margin="0,5,0,5"/>
                </StackPanel>

                <ListBox Grid.Row="1" Name="listbox_MainMenu" SelectedIndex="0" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemString}" Style="{StaticResource ListBoxVertical}"/>
            </Grid>

            <!-- Shortcuts -->
            <StackPanel Margin="0,55,20,0" HorizontalAlignment="Right">
                <Button Name="grid_Popup_MainMenu_button_Close" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Close.png" Height="35" Width="35" Margin="0,0,-5,0" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Popup - Search -->
        <Grid Name="grid_Popup_Search" Visibility="Collapsed">
            <Grid Margin="150,35,150,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"> 
                        <Run Text="Search" Style="{StaticResource RunWhiteLight}" FontSize="{DynamicResource TextSizeTitle}"/> 
                        <Run Name="grid_Popup_Search_Count_TextBlock" Style="{StaticResource RunAccentLight}" FontSize="{DynamicResource TextSizeSubTitle}"/>
                    </TextBlock>

                    <Grid>
                        <TextBox Name="grid_Popup_Search_textbox" VerticalContentAlignment="Center" Margin="0,0,65,0" FontSize="{DynamicResource TextSizeMedium}" Style="{StaticResource TextBoxTransparent}" Text="Search application..." styles:TextboxPlaceholder.Placeholder="Search application..."/>
                        <Button Name="grid_Popup_Search_button_Reset" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Reset the search panel">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonUp.png" Height="22" Width="22" Margin="0,0,5,0"/>
                                <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/TextClear.png" Height="25" Width="25"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <Border HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}" Margin="0,5,0,5"/>
                    <TextBlock Name="grid_Popup_Search_textblock_Result" Style="{StaticResource TextBlockGrayLight}" FontSize="{DynamicResource TextSizeHuge}" HorizontalAlignment="Center"/>
                </StackPanel>

                <ListBox Grid.Row="1" Name="lb_Search" Focusable="False" SelectionMode="Single" Margin="0,5,0,0" ItemContainerStyle="{StaticResource ListBoxItemWhite}" ItemTemplate="{StaticResource ListBoxItemApp}" Style="{StaticResource ListBoxWrapPanel}"/>
            </Grid>

            <!-- Shortcuts -->
            <StackPanel Margin="0,55,20,0" HorizontalAlignment="Right">
                <Button Name="grid_Popup_Search_button_Close" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Close the popup">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonRight.png" Height="30" Width="30" Margin="0,0,5,0"/>
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Close.png" Height="35" Width="35" Margin="0,0,-5,0" />
                    </StackPanel>
                </Button>
                <Button Name="grid_Popup_Search_button_InteractItem" Margin="0,10,0,0" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Interact with search result">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/ButtonLeft.png" Height="30" Width="30" Margin="0,0,5,0"/>
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Hamburger.png" Height="35" Width="35" Margin="0,0,-2,0" />
                    </StackPanel>
                </Button>
                <Button Name="grid_Popup_Search_button_KeyboardControllerIcon" Margin="0,10,0,0" Focusable="False" HorizontalAlignment="Right" Style="{StaticResource ButtonImageTransparentWhiteBorder}" ToolTipService.ToolTip="Open or close the keyboard">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/GuideHoldOff.png" Height="30" Opacity="0.80" Margin="0,0,10,0"/>
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Keyboard.png" Height="35" Width="35" Margin="0,0,-2,0" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Popup - Welcome -->
        <Grid Name="grid_Popup_Welcome" Visibility="Collapsed">
            <Grid Margin="150,35,150,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock HorizontalAlignment="Center" Style="{StaticResource TextBlockWhiteLight}" FontSize="{DynamicResource TextSizeSubTitle}" TextAlignment="Center" TextWrapping="Wrap" Text="Welcome to Controller User Interface"/>
                    <Border HorizontalAlignment="Stretch" Style="{StaticResource BorderHorizontalAccentLight}" Margin="0,5,0,5"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" Style="{StaticResource ScrollViewerVertical}">
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Center" Style="{StaticResource TextBlockWhite}" FontSize="{StaticResource TextSizeLarge}" TextAlignment="Center" TextWrapping="Wrap" Text="Now it's time to quickly setup some basics to get you going along with the application."/>
                        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Style="{StaticResource TextBlockWhite}" FontSize="{StaticResource TextSizeLarge}" TextAlignment="Center" TextWrapping="Wrap" Text="Connect your controller and set it up in DirectXInput and then you will able to use it in this application."/>
                        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Style="{StaticResource TextBlockWhite}" FontSize="{StaticResource TextSizeLarge}" TextAlignment="Center" TextWrapping="Wrap" Text="Once you have a controller connected through DirectXInput you can always access CtrlUI by pressing on the 'Guide' button."/>
                        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Style="{StaticResource TextBlockWhite}" FontSize="{StaticResource TextSizeLarge}" TextAlignment="Center" TextWrapping="Wrap" Text="If you are running into an issue or can't find something, you might find your answer on the 'Help' page located in the main menu."/>
                        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Style="{StaticResource TextBlockGray}" FontSize="{StaticResource TextSizeLarge}" TextAlignment="Center" TextWrapping="Wrap" Text="Here are some popular applications for you to setup and easily launch later on, you can add all the applications you want later on by clicking on the 'Add application' button in the main menu."/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <Button Name="grid_Popup_Welcome_button_Edge" Height="75" Width="75" Style="{StaticResource ButtonImageTransparentWhiteBorder}">
                                <Image Name="grid_Popup_Welcome_img_Edge"/>
                            </Button>
                            <Button Name="grid_Popup_Welcome_button_Spotify" Margin="10,0,0,0" Height="75" Width="75" Style="{StaticResource ButtonImageTransparentWhiteBorder}">
                                <Image Name="grid_Popup_Welcome_img_Spotify"/>
                            </Button>
                            <Button Name="grid_Popup_Welcome_button_Kodi" Margin="10,0,0,0" Height="75" Width="75" Style="{StaticResource ButtonImageTransparentWhiteBorder}">
                                <Image Name="grid_Popup_Welcome_img_Kodi"/>
                            </Button>
                            <Button Name="grid_Popup_Welcome_button_PSRemote" Margin="10,0,0,0" Height="75" Width="75" Style="{StaticResource ButtonImageTransparentWhiteBorder}">
